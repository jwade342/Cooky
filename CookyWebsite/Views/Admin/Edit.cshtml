@model Receipe
@{
  ViewBag.Title = "Eidt Reciepe | Cooky";
}

<section class="content-wrap">

  <form asp-action="Edit" method="post">

    <input type="hidden" asp-for="ReceipeId" value="@Model.ReceipeId" />

    <div class="form-group">
      <label asp-for="Name"></label>
      <div><span asp-validation-for="Name"></span></div>
      <input asp-for="Name" />
    </div>

    <div class="form-group">
      <label asp-for="Category"></label>
      <div><span asp-validation-for="Category"></span></div>
      <input asp-for="Category" />
    </div>

    <div class="form-group">
      <label asp-for="Time"></label>
      <div><span asp-validation-for="Time"></span></div>
      <input asp-for="Time" />
    </div>

    <div class="form-group">
      <label asp-for="Ingredient"></label>
      <div><span asp-validation-for="Ingredient"></span></div>
      <input asp-for="Ingredient" />
    </div>

    <div class="form-group">
      <label asp-for="Detail"></label>
      <div><span asp-validation-for="Detail"></span></div>
      <textarea asp-for="Detail" style="width: 300px; height: 200px"></textarea>
    </div>



    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-action="Discover" asp-controller="Home">Cancel</a>
  </form>
</section>